@model AkaShop.ViewModel.System.Users.LoginRequest
@{
    var culture = CultureInfo.CurrentCulture.Name;
}
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li class="active"><localize>Login</localize></li>
</ul>
<h3> Login</h3>
<hr class="soft" />

<div class="row">
    <div class="span4">
        <div class="well">
            <h5><localize>CREATE YOUR ACCOUNT</localize></h5><br />
                                                             <localize>You are not have account</localize>?<br /><br /><br />
            <form action="register.html">
                <div class="controls">
                    <a href="/@culture/Account/Register" class="btn block"><localize>CREATE YOUR ACCOUNT</localize></a>
                </div>
            </form>
        </div>
    </div>
    <div class="span1"> &nbsp;</div>
    <div class="span4">
        <div class="well">
            <h5>ALREADY REGISTERED ?</h5>
            <form action="/@culture/Account/Login" method="post">
                <div class="control-group">
                    <label class="control-label" for="inputEmail1"><localize>User Name</localize></label>
                    <div class="controls">
                        <input class="span3" type="text" asp-for="UserName" placeholder="User Name">
                        <span asp-validation-for="UserName" class="text-error"></span>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputPassword1"><localize>Password</localize></label>
                    <div class="controls">
                        <input type="password" class="span3" asp-for="Password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-error"></span>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn"><localize>Login</localize></button> <a href="forgetpass.html"><localize>Forget password</localize>?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
